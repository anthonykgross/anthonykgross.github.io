---
[
  {% for post in site.posts %}
  {
    "title": "{{post.title}}",
    "image": "{{post.image}}",
    "description": "{{post.description}}",
    "intro": "{{post.intro}}",
    "url": "{{post.url}}",
    "date": "{{post.date | date: '%d/%m/%Y'}}",
    "category": "{{post.category}}",
    "tags": [
      {% for tag in post.tags %}
        "{{tag}}"
        {% if forloop.last != true %}
        ,
        {% endif %}
      {% endfor %}
    ]
  }
  {% if forloop.last != true %}
    ,
  {% endif %}
  {% endfor %}
]